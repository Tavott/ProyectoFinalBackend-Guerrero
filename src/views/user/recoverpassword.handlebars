<section class="form-container">
  <article>
    <h2>Reset Password</h2>
    <form method="POST" class="shadow-lg p-3 my-3 border rounded user_form" style="min-width: 500px;" action=""  id="recoverpassword" data-redirect="login">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" autocomplete="off" value="{{email}}" class="form-control" aria-describedby="emailHelp">
      </div>
      <button class="btn btn-primary">Recover Password</button>
      <div class="my-3">
        <p class="m-0 fs-6 fst-italic">Remember your password? <a href="/login">Sign in</a></p>
      </div>
    </form>
  </article>
</section>

<script src="/js/recoverPassword.js"></script>